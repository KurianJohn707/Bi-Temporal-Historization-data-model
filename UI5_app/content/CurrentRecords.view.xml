<mvc:View
	controllerName="content.ActiveRecords"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
    xmlns:l="sap.ui.commons.layout"
    xmlns:html="http://www.w3.org/1999/xhtml"
    height="100%">
    
	<m:Page
	    title="BI-TEMPORAL HISTORIZATION DATA MODEL"
		class="sapUiContentPadding"
		enableScrolling="false">
        <m:customHeader>
		    <m:Bar>
		        <m:contentLeft>
		            <html:a href="/gbi-student-007/Bi-Temporal_Historization/UI5_app/index.html" >
                	   <m:Button tooltip="Home" icon="sap-icon://home"/>
                    </html:a>
		        </m:contentLeft>
		
		        <m:contentMiddle>
		            <m:Text text = "BI-TEMPORAL HISTORIZATION DATA MODEL"></m:Text>
		        </m:contentMiddle>
		
		        <m:contentRight>
		            <m:Image src="/gbi-student-007/Bi-Temporal_Historization/UI5_app/content/Images/SAPLogo.png" width="60px" height="30px"></m:Image>
		        </m:contentRight>		
		    </m:Bar>
		</m:customHeader>
		<m:content>

			<Table
				id="table"
				selectionMode="MultiToggle"
				rows="{/Technical_Table}"
				visibleRowCount="15"
				enableCellFilter="{ui>/cellFilterOn}"
				ariaLabelledBy="title">
				
				<toolbar>
					<m:Toolbar>
						<m:Title id="title" text="Customer Details"></m:Title>
						<m:ToolbarSpacer/>
						
						<m:Button text="Clear" tooltip="Clear all filters" press="clearAllFilters"/>
						<m:ToolbarSeparator/>
						<m:SearchField placeholder="Customer ID" value="{ui>/globalFilter}" search="filterID" width="15rem"/>
						<m:ToolbarSeparator/>	
						<m:SearchField placeholder="Customer Name" value="{ui>/globalFilter}" search="filterName" width="15rem"/>
						<m:ToolbarSeparator/>
						<m:SearchField placeholder="City" value="{ui>/globalFilter}" search="filterCity" width="15rem"/>
					</m:Toolbar>
					
				</toolbar>
				
				<columns>
				
					<Column
						width="3.5rem"
						filterProperty="CUSTOMER_NUMBER">
						<m:Label text="Customer ID" />
						<template>
							<m:Text text="{CUSTOMER_NUMBER}" wrapping="false" />
						</template>
					</Column>
					
					<Column
						width="4.5rem"
						filterProperty="CUSTOMER_NAME"
						defaultFilterOperator="StartsWith">
						<m:Label text="Customer Name" />
						<template>
							<m:Text text="{CUSTOMER_NAME}" wrapping="false" />
						</template>
					</Column>
					
					<Column
						width="3rem"
						filterProperty="CITY"
						defaultFilterOperator="StartsWith">
						<m:Label text="City" />
						<template>
							<m:Text text="{CITY}" wrapping="false" />
						</template>
					</Column>
					
					<Column
						width="6rem"
						filterProperty="MODIFICATION_TIME"
						defaultFilterOperator="Date">
						<m:Label text="MODIFICATION_TIME" />
						<template>
							<m:Text text="{path: 'MODIFICATION_TIME',type: 'sap.ui.model.type.DateTime',formatOptions: {style: 'short'} }" wrapping="false" />
						</template>
					</Column>
					
					<Column
						width="6rem"
						hAlign="End">
						<m:Label text="BUSINESS_VALID_FROM" />
						<template>
							<m:Text text="{path: 'BUSINESS_VALID_FROM',type: 'sap.ui.model.type.Date',formatOptions: {style: 'medium'} }" wrapping="false" />
						</template>
					</Column>
					
					<Column
						width="6rem"
						hAlign="End">
						<m:Label text="BUSINESS_VALID_TO" />
						<template>
							<m:Text text="{path: 'BUSINESS_VALID_TO',type: 'sap.ui.model.type.Date',formatOptions: {style: 'medium'} }" wrapping="false" />
						</template>
					</Column>
					
					<Column
						width="6rem"
						hAlign="End">
						<m:Label text="TECHNICAL_VALID_FROM" />
						<template>
							<m:Text text="{path: 'TECHNICAL_VALID_FROM',type: 'sap.ui.model.type.Date',formatOptions: {style: 'medium'} }" wrapping="false" />
						</template>
					</Column>
					
					<Column
						width="6rem"
						hAlign="End">
						<m:Label text="TECHNICAL_VALID_TO" />
						<template>
							<m:Text text="{path: 'TECHNICAL_VALID_TO',type: 'sap.ui.model.type.Date',formatOptions: {style: 'medium'} }" wrapping="false" />
						</template>
					</Column>
					
				</columns>
				
			</Table>
			<html:p/> <html:p/>
			<m:Bar>
				<m:contentRight>
				    <m:Link text="Go to Current Records" href="https://h02-d03.ucc.ovgu.de/gbi-student-007/Bi-Temporal_Historization/UI5_app/ActiveRecords.html" />
					<m:Link text="Go to Active Records" href="https://h02-d03.ucc.ovgu.de/gbi-student-007/Bi-Temporal_Historization/UI5_app/ActiveRecords.html" />
				</m:contentRight>
			</m:Bar>
			
			
		</m:content>
					
					
	</m:Page>
	
	
</mvc:View>